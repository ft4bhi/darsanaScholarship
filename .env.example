# ---------------------------
# PostgreSQL / Database Config
# ---------------------------
POSTGRES_URL="postgres://<USER>:<PASSWORD>@<HOST>/<DATABASE>?sslmode=require"
POSTGRES_PRISMA_URL="postgres://<USER>:<PASSWORD>@<HOST>/<DATABASE>?pgbouncer=true&connect_timeout=15&sslmode=require"
POSTGRES_URL_NO_SSL="postgres://<USER>:<PASSWORD>@<HOST>/<DATABASE>"
POSTGRES_URL_NON_POOLING="postgres://<USER>:<PASSWORD>@<HOST>/<DATABASE>?sslmode=require"

POSTGRES_USER="<YOUR_DB_USER>"
POSTGRES_HOST="<YOUR_DB_HOST>"
POSTGRES_PASSWORD="<YOUR_DB_PASSWORD>"
POSTGRES_DATABASE="<YOUR_DB_NAME>"

# Common Prisma / ORM connection URL
DATABASE_URL="postgres://<USER>:<PASSWORD>@<HOST>/<DATABASE>?sslmode=require"

# ---------------------------
# Email Config
# ---------------------------
EMAIL_USER="<YOUR_EMAIL>"
EMAIL_PASS="<YOUR_EMAIL_PASSWORD>"

# ---------------------------
# Firebase Admin SDK (server-side)
# ---------------------------
FIREBASE_ADMIN_SDK_KEY='{
  "type": "service_account",
  "project_id": "<YOUR_PROJECT_ID>",
  "private_key_id": "<YOUR_PRIVATE_KEY_ID>",
  "private_key": "-----BEGIN PRIVATE KEY-----\n<YOUR_PRIVATE_KEY>\n-----END PRIVATE KEY-----\n",
  "client_email": "<YOUR_CLIENT_EMAIL>",
  "client_id": "<YOUR_CLIENT_ID>",
  "auth_uri": "https://accounts.google.com/o/oauth2/auth",
  "token_uri": "https://oauth2.googleapis.com/token",
  "auth_provider_x509_cert_url": "https://www.googleapis.com/oauth2/v1/certs",
  "client_x509_cert_url": "<YOUR_CERT_URL>",
  "universe_domain": "googleapis.com"
}'

